{
    "compilerOptions": {
       "module": "commonjs",
       "target": "es2016",
       "allowSyntheticDefaultImports": true,
       "noImplicitAny": true,
       "moduleResolution": "node",
       "sourceMap": true,
       "outDir": "dist",
       "rootDir": "./",
       "baseUrl": ".",
       "resolveJsonModule": true,
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "strict": false,
       "skipLibCheck": true,
       "paths": {
          "*": ["node_modules/*", "src/types/*"]
       }
    },
    "include": ["./src/**/*", "codegen.ts", "src/resolvers"]
 }